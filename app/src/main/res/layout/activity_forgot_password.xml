<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:id="@+id/forgotP_Activity"
    tools:context="com.example.admin.thingstodo.UserAuth.ForgotPassword">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    app:srcCompat="@drawable/mylogo0"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter your email address below to reset password, we're just being extra careful."
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColor="@color/colorAccent"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="40dp">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="40dp">



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/ed_email"
                        android:textSize="16dp"
                        android:hint="Email"
                        android:textColorHint="#2A363B"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/oval_button"
                        android:drawableLeft="@drawable/email"
                        android:drawablePadding="8dp"
                        android:padding="8dp"  />

                </RelativeLayout>


                <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
                    <!--android:paddingRight="@dimen/activity_horizontal_margin"  >-->

                    <!--<EditText-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:id="@+id/editText3"-->
                        <!--android:hint="Confirm Password"-->
                        <!--android:textSize="16dp"-->
                        <!--android:textColorHint="#2A363B"-->
                        <!--android:layout_marginBottom="10dp"-->
                        <!--android:background="@drawable/oval_button"-->
                        <!--android:drawableLeft="@drawable/key"-->
                        <!--android:drawablePadding="8dp"-->
                        <!--android:padding="8dp"/>-->



                <!--</RelativeLayout>-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"  >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Reset Password"
                    android:layout_margin="8dp"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:id="@+id/btn_Submit"
                    app:srcCompat="@drawable/oval_button"
                    android:backgroundTint="#EB4A5F"
                    android:background="@drawable/oval_button"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="LogIn"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:layout_margin="8dp"
                    android:id="@+id/btn_Login1"
                    android:backgroundTint="#FF847C"
                    android:background="@drawable/oval_button"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/btnLogin" />

            </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
